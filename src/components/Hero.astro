---
import { Icon } from "astro-icon/components";
import { Button } from "../components/ui/button";
import Email from "./icons/Email";
import { Image } from "astro:assets";
import portrait from "../assets/hero/portrait.png";
import { buttonVariants } from "../components/ui/button";
import { cn } from "@/lib/utils";

const contactMeItems = [];
---

<section class="min-h-screen flex flex-col justify-center lg:gap-x-10 gap-4">
	<div class="flex flex-col lg:flex-row justify-between items-center">
		<Image
			class="lg:order-1"
			src={portrait}
			loading={"eager"}
			widths={[176, 300, portrait.width]}
			sizes={`(max-width: 320px) 176px, (max-width: 1001px) 300px, ${portrait.width}px`}
			alt="A portrait of Andrés Castellanos"
		/>
		<div
			class="flex flex-col justify-center gap-3 md:gap-6 lg:gap-5 bg-background w-full items-center lg:items-start"
		>
			<h1
				class="text-4xl md:text-6xl lg:text-[80px] font-bold max-w-[10ch] text-center lg:text-left"
			>
				I&apos;m <span class="text-accent">Andrés</span> Castellanos
			</h1>
			<h2
				class="font-medium text-accent text-xl md:text-3xl lg:text-4xl text-center lg:text-left"
			>
				Frontend Developer
			</h2>
			<div
				class="grid grid-cols-1 gap-2 xs:grid-cols-2 w-max justify-items-center md:gap-4 lg:justify-items-start"
			>
				<p
					class="flex items-center gap-2 text-lg lg:m-0 justify-self-center"
					aria-label="Living in Cúcuta, Colombia"
				>
					<Icon
						aria-hidden="true"
						name="mdi:location"
						class="h-4 w-4 md:h-6 md:w-6 text-text-color"
					/>
					Cúcuta, Colombia
				</p>
				<p
					class="flex items-center gap-2 text-lg lg:m-0 justify-self-center"
					aria-label="I speak Native Spanish, English B2"
				>
					<Icon
						aria-hidden="true"
						name="mdi:language"
						class="h-4 w-4 md:h-6 md:w-6 text-text-color"
					/>
					English B2
				</p>
				<Button size={"lg"}>
					Down Load CV
					<Icon aria-hidden="true" class="ml-2" name="mdi:file-document" />
				</Button>
				<a
					href="#projects"
					class={cn(
						buttonVariants({ variant: "outline" }),
						"h-11 py-3 px-7 text-lg",
					)}
				>
					View Projects
					<Icon
						aria-hidden="true"
						class="ml-2 text-accent group-hover:text-primary-foreground h-6 w-6"
						name="mdi:keyboard-arrow-right"
					/>
				</a>
			</div>
		</div>
	</div>
	<div class="flex flex-col gap-2 items-center">
		<ul id="contact-me" class="flex gap-2 justify-self-center">
			<li>
				<a
					aria-label="go to Linkedin"
					href="https://www.linkedin.com/in/andres-cs/"
					target="_blank"
				>
					<Icon
						class="w-8 h-8 md:w-10 md:h-10 text-text-color hover:text-text-color/80"
						aria-hidden="true"
						name="entypo-social:linkedin-with-circle"
					/>
				</a>
			</li>
			<li>
				<a
					aria-label="go to Github"
					href="https://github.com/andrescasa-dev"
					target="_blank"
				>
					<Icon
						class="w-8 h-8 md:w-10 md:h-10 text-text-color hover:text-text-color/80"
						aria-hidden="true"
						name="bi:github"
					/>
				</a>
			</li>
			<li>
				<button aria-label={"copy email"}>
					<Email
						className="w-8 h-8 md:w-10 md:h-10 text-text-color hover:text-text-color/80"
						aria-hidden="true"
					/>
				</button>
			</li>
		</ul>
		<Icon
			aria-hidden="true"
			class="h-10 w-10 rotate-90 text-accent"
			name="mdi:keyboard-arrow-right"
		/>
	</div>
</section>

---
import { Icon } from "astro-icon/components";
import { Button } from "../components/ui/button";
import Image from "astro/components/Image.astro";

const contactMeItems = [
	{
		label: "go to Linkedin",
		href: "https://www.linkedin.com/in/andres-cs/",
		icon: "entypo-social:linkedin-with-circle",
	},
	{
		label: "go to Github",
		href: "https://github.com/andrescasa-dev",
		icon: "bi:github",
	},
	{
		label: "copy my email",
		icon: "email",
	},
];
---

<section
	class="min-h-screen flex flex-col lg:flex-row justify-center items-center lg:gap-x-10 md:gap-y-5 gap-y2"
>
	<div
		class="h-[47%] lg:h-auto lg:w-1/2 flex flex-col justify-start lg:order-1"
	>
		<Image
			class="mt-auto mx-auto -z-10 md:block lg:max-w-none"
			src="/portrait.png"
			width={534.93}
			height={556.76}
			alt="A portrait of Andrés Castellanos"
		/>
	</div>
	<div
		class="grid justify-items-center justify-center gap-3 md:gap-6 lg:gap-10 bg-background w-full"
	>
		<h1
			class="text-5xl md:text-7xl lg:text-8xl font-bold text-center max-w-[10ch]"
		>
			I&apos;m <span class="text-accent">Andrés</span> Castellanos
		</h1>
		<p
			class="hidden md:block md:text-2xl lg:text-xl text-center max-w-readable lg:-mt-8 opacity-90"
		>
			Driven by growth, I develop cutting-edge and appealing websites
		</p>
		<div
			class="grid grid-cols-1 gap-2 md:grid-cols-2 md:gap-4 justify-self-stretch"
		>
			<ul id="contact-me" class="flex gap-2 justify-self-center md:-order-1">
				{
					contactMeItems.map(({ icon, label, href }) => {
						const Wrapper = href ? "a" : "button";
						return (
							<li>
								<Wrapper aria-label={label} href={href}>
									<Icon
										class="w-8 h-8 md:w-10 md:h-10"
										aria-hidden="true"
										name={icon}
									/>
								</Wrapper>
							</li>
						);
					})
				}
			</ul>
			<ul
				id="extra-info"
				class="flex flex-col gap-1 items-center lg:items-start md:-order-2 text-xs md:lg:text-base"
			>
				<li
					class="flex items-center gap-2"
					aria-label="Living in Cúcuta, Colombia"
				>
					<Icon
						aria-hidden="true"
						name="mdi:location"
						class="h-4 w-4 md:h-6 md:w-6 text-accent"
					/>
					Cúcuta, Colombia
				</li>
				<li
					class="flex items-center gap-2"
					aria-label="I speak Native Spanish, English B2"
				>
					<Icon
						aria-hidden="true"
						name="mdi:language"
						class="h-4 w-4 md:h-6 md:w-6 text-accent"
					/>
					Native Spanish, English B2
				</li>
			</ul>
			<Button className="justify-self-stretch lg:text-base" size={"lg"}>
				Down Load CV
				<Icon
					aria-hidden="true"
					class="h-4 w-4 ml-2"
					name="mdi:file-document"
				/>
			</Button>
			<Button
				className="justify-self-stretch lg:text-base text-primary"
				size={"lg"}
				variant={"outline"}
			>
				View Projects
				<Icon
					aria-hidden="true"
					class="h-4 w-4 ml-2"
					name="mdi:keyboard-arrow-right"
				/>
			</Button>
		</div>
		<p class="text-xs md:text-sm flex justify-center items-center gap-1.5">
			<span>Full time</span>
			<span class="text-[10px] md:text-sm opacity-75">or</span>
			<span>Freelance</span>
		</p>
	</div>
</section>

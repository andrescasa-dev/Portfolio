---
import { cn } from "@/lib/utils";
import { Image } from "astro:assets";
import ufpsBanner from "../assets/UFPS_Logo.png";
import JourneyCard from "./JourneyCard";

interface Props {
  class: string;
  bannerRight?: true | false;
}

const { bannerRight } = Astro.props;
---

<div
  class={cn("flex flex-col xs:flex-row md:flex-col gap-2", Astro.props.class)}
>
  <JourneyCard client:load />
  <div
    class={cn(
      "flex xs:flex-col sm:flex-col md:flex-row p-2 md:p-4 border border-border gap-3 rounded-sm w-fit h-fit flex-shrink-0",
      { "xs:-order-1 md:order-1": bannerRight },
      { "self-end xs:self-auto": bannerRight },
    )}
  >
    <Image
      src={ufpsBanner}
      alt={"the logo of the university i attended"}
      width={32}
      height={32}
    />
    <div aria-hidden="true" class="w-px h-[90%] bg-border rounded-lg"></div>
    <Image
      src={ufpsBanner}
      alt={"the logo of the university i attended"}
      width={32}
      height={32}
    />
  </div>
</div>
